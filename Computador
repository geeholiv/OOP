public class Computador {
    String cor;
    String modelo;
    double armazenamento;
    double preco;

    public String getCor() {
        return cor;
    }
    public void setCor(String cor) {
        this.cor = cor;
    }
    public String getModelo() {
        return modelo;
    }
    public void setModelo(String modelo) {
        this.modelo = modelo;
    }
    public double getArmazenamento() {
        return armazenamento;
    }
    public void setArmazenamento(double armazenamento) {
        this.armazenamento = armazenamento;
    }
    public double getPreco() {
        return preco;
    }
    public void setPreco(double preco) {
        this.preco = preco;
    }
}


import java.util.Scanner;
public class ObjetoComputador {
    public static void main(String[] args) {
        Scanner ler = new Scanner(System.in);
        Computador[] computador1 = new Computador[4];

        for (int i = 1; i < 4; i++){
            computador1[i] = new Computador();

            System.out.println("Informe os dados do " +i+ " ° computador");
            System.out.println("Digite a cor: ");
            String cor = ler.nextLine();
            System.out.println("Digite o modelo: ");
            String modelo = ler.nextLine();
            System.out.println("Digite o armazenamento: ");
            double armazenamento = ler.nextDouble();
            System.out.println("Digite o preço: ");
            double preco = ler.nextDouble();
            ler.nextLine();

            computador1[i].setCor(cor);
            computador1[i].setModelo(modelo);
            computador1[i].setArmazenamento(armazenamento);
            computador1[i].setPreco(preco);
        }

        for (int i = 1; i < 4; i++) {
            System.out.println("----Cadastro " + i + "° COMPUTADOR----");
            System.out.println("A Cor inserida foi: " + computador1[i].getCor());
            System.out.println("O Modelo inserido foi: " + computador1[i].getModelo());
            System.out.println("O Armazenamento inserido foi: " + " GB " + computador1[i].getArmazenamento());
            System.out.println("O Preço inserido foi: " + " R$" + computador1[i].getPreco());

        }
    }
}
