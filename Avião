public class Aviao {
    String tipo;
    String cor;
    double velocidade;
    int qtdeAssento;

    public String getTipo() {
        return tipo;
    }
    public void setTipo(String tipo) {
        this.tipo = tipo;
    }
    public String getCor() {
        return cor;
    }
    public void setCor(String cor) {
        this.cor = cor;
    }
    public double getVelocidade() {
        return velocidade;
    }
    public void setVelocidade(double velocidade) {
        this.velocidade = velocidade;
    }
    public int getQtdeAssento() {
        return qtdeAssento;
    }
    public void setQtdeAssento(int qtdeAssento) {
        this.qtdeAssento = qtdeAssento;
    }
}

import java.util.Scanner;
public class ObjetoAviao {
    public static void main(String[] args) {
        Scanner ler = new Scanner(System.in);
        Aviao[] aviao1 = new Aviao[4];

        for (int i = 1; i < 4; i++) {
            aviao1[i] = new Aviao();

            System.out.println("Informe os dados do " + i + " ° avião");
            System.out.println("Digite o tipo do avião: ");
            String tipo = ler.nextLine();
            System.out.println("Digite a cor do avião");
            String cor = ler.nextLine();
            System.out.println("Digite a velocidade do avião");
            double velocidade = ler.nextDouble();
            System.out.println("Digite a quantidade de assentos");
            int qtdeAssentos = ler.nextInt();
            ler.nextLine();

            aviao1[i].setTipo(tipo);
            aviao1[i].setCor(cor);
            aviao1[i].setVelocidade(velocidade);
            aviao1[i].setQtdeAssento(qtdeAssentos);
        }

        for (int i = 1; i < 4; i++) {
            System.out.println("----Cadastro " + i + "° AVIAO----");
            System.out.println("Tipo: " + aviao1[i].getTipo());
            System.out.println("Cor: " + aviao1[i].getCor());
            System.out.println("Velocidade: " + aviao1[i].getVelocidade());
            System.out.println("Quantidade de assentos: " + aviao1[i].getQtdeAssento());


        }

    }
}
